@model CuBuy.ViewModels.SignUpModel

<div class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                           <img src="~/images/icon/logo-black.png" alt="CoolAdmin" width="300">
                        </div>
                        <div class="login-form">
                            <form asp-controller="Account" asp-action="Signup" method="post">
                                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
                                <div asp-validation-summary="ModelOnly" class="text-danger">
                                </div>
                                <div class="form-group">
                                    <label>Username</label>
                                    <input class="au-input au-input--full" asp-for="Name" type="text" placeholder="Username">
                                    <span asp-validation-for="Name" class="text-danger"/>
                                </div>
                                <div class="form-group">
                                    <label>Email Address</label>
                                    <input class="au-input au-input--full" asp-for="Email" type="email"  placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"/>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input class="au-input au-input--full" asp-for="Password" type="password"  placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"/>
                                </div>
                                <button class="au-btn au-btn--block au-btn--blue m-b-20" type="submit">register</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>