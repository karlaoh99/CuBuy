@{
    ViewData["Title"] = "PurchasesOfOneBuyer";
    var userIsAuthenticated = Context.User.Identity.IsAuthenticated;
}
@using CuBuy.Infraestructure
@model IEnumerable<Purchase>

<div class="animsition">
    <div class="page-wrapper">
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="user-data m-b-40">
                                <h3 class="title-3 m-b-30">
                                    Purchases
                                </h3>
                                <div class="table-responsive table-data">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <td>Product</td>
                                                <td>Price</td>
                                                <td>Units</td>
                                                <td>Total</td>
                                                <td>Date</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Count() != 0)
                                            {
                                                foreach (var purchase in Model)
                                                {
                                                    <tr class="table-data__info">
                                                        <td><h6>@purchase.Ad.Product</h6></td>
                                                        <td><h6>@purchase.Ad.Price</h6></td>
                                                        <td><h6>@purchase.Units</h6></td>
                                                        <td><h6>@(purchase.Ad.Price * purchase.Units)</h6></td>
                                                        <td><h6>@purchase.DateTime</h6></td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr class="table-data__info">
                                                    <td><h6>No Purchases</h6></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="user-data__footer">
                                    <h5>Purchases total value: @Model.Sum(p=>p.Ad.Price * p.Units) $</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
