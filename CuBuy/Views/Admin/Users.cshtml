@model IEnumerable<CuBuy.Models.AppUser>
@using System.Globalization

<div class="section__content">
    <div class="container-fluid">
        <div class="row m-t-30">
            <div class="col-md-12">
                <div class="user-data m-b-30">
                    <h3 class="title-3 m-b-30">
                        <i class="zmdi zmdi-account-calendar"></i>user data</h3>
                    <div class="table-data__tool">
                        <div class="table-data__tool-left">
                            <form asp-action="Users" method="POST">
                                <div class="filters m-b-45">
                                    <div class="rs-select2--dark rs-select2--md m-r-10 rs-select2--border">
                                        <select class="js-select2" name="role">
                                            <option value="All" selected="selected">All Roles</option>
                                            <option value="Admin">Admin</option>
                                            <option value="Buyer">Buyer</option>
                                            <option value="Seller">Seller</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                    <div class="rs-select2--dark rs-select2--sm rs-select2--border">
                                        <select class="js-select2 au-select-dark" name="status">
                                            <option value="All" selected="selected">All Status</option>
                                            <option value="OK">Ok</option>
                                            <option value="Warning">Warning</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                    <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-filter"></i>Filter</button>
                                </div>
                            </form>
                            @* <button></button><a asp-controller="Admin"  asp-action="Users" method="post" class="btn btn-outline-secondary">
                                <i class="fa fa-filter"></i>Filter</a></button> *@
                        </div>
                        <div class="table-data__tool-right">
                            <button><a class="au-btn au-btn-icon au-btn--green au-btn--small" asp-action="AddUser">
                                <i class="zmdi zmdi-plus"></i>Add User</a></button>
                        </div>
                    </div>
                    <div class="table-responsive table-data">
                        <table class="table">
                            <thead>
                                <tr>
                                    @* <td>
                                        <label class="au-checkbox">
                                            <input type="checkbox">
                                            <span class="au-checkmark"></span>
                                        </label>
                                    </td> *@
                                    <td>name</td>
                                    <td>roles</td>
                                    <td>status</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        @* <td>
                                            <label class="au-checkbox">
                                                <input type="checkbox">
                                                <span class="au-checkmark"></span>
                                            </label>
                                        </td> *@
                                        <td>
                                            <div class="table-data__info">
                                                <h6>@user.UserName</h6>
                                                <span>
                                                    <a asp-action="Edit" asp-route-id="@user.Id">@user.Email</a>
                                                </span>
                                            </div>
                                        </td>
                                        <td user-roles=@user.Id></td>
                                        <td user-state=@user.Id></td>
                                        <td>
                                            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                                @* <a class="btn-sm btn-info" asp-action="User" asp-route-id="@user.Id">Info</a> *@
                                                <button type="submit" class="btn-sm btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>              
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>